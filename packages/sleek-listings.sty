\newcommand{\NumberStyle}[1]{
    \lstdefinestyle{#1Number}{
        style=#1,
        %%%%%
        numbers=left
    }
}

\newcommand{\FrameStyle}[1]{
    \lstdefinestyle{#1Frame}{
        style=#1,
        %%%%%
        frame=single,
        framesep=0em,
        rulesep=0em,
        xleftmargin=0.75em,
        xrightmargin=0.75em,
        framexleftmargin=0.75em,
        framexrightmargin=0.75em,
        framextopmargin=0.5em,
        framexbottommargin=0.5em
    }
}

\newcommand{\FrameTBStyle}[1]{
    \FrameStyle{#1}
    \lstdefinestyle{#1FrameTB}{
        style=#1Frame,
        %%%%%
        frame=tb,
        xleftmargin=0em,
        xrightmargin=0em,
        framexleftmargin=0em,
        framexrightmargin=0em
    }
}

\newcommand{\FrameTBNumberStyle}[1]{
    \FrameTBStyle{#1}
    \NumberStyle{#1FrameTB}
}

\newcommand{\FrameNumberStyle}[1]{
    \FrameStyle{#1}
    \lstdefinestyle{#1FrameNumber}{
        style=#1Frame,
        %%%%%
        xleftmargin=2.75em,
        framexleftmargin=2.75em,
        %%%%%
        numbers=left,
        numbersep=1em
    }
}

